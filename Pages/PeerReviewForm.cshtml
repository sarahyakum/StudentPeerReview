@page
@model StudentPR.Pages.PeerReviewFormModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Peer Review Form";
    var teamMembers = Model.GetTeamMembers();
    var criteriaNames = Model.GetCriteriaNames();
    var criteriaDescriptions = Model.GetCriteriaDescriptions();
}

<link rel="stylesheet" href="~/css/styles.css" />

<h2>Peer Review Form</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="error-message">
        <p>@Model.ErrorMessage</p>
    </div>
}

<div class="peer-review-form">
    <table>
        <thead>
            <tr>
            <th>Students</th>
                @foreach (var criteriaName in criteriaNames)
                {
                    <th>@criteriaName</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var member in teamMembers)
            {
                <tr>
                    <td>@member.Name (@member.NetId)</td>
                    @foreach (var criteria in criteriaNames)
                    {
                        <td>
                            <select name="@criteria-@member.NetId">
                                @for (int score = 0; score <= 6; score++)
                                {
                                    <option value="@score">@score</option>
                                }
                            </select>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn">Submit Review</button>
</div> 
